
     {% assign size = section.blocks.size | times: 1.0 %}

        {% assign value = 100 | divided_by: size %}


        <div class="progress" style="background-size: {{ value | append: '%'}} 100%;"></div>


<style>

/* Progress bar */
.progress {
  position: relative;
  display: block;
  margin-top: 40px;
  margin-left: 0;
  width: 100%;
  height: 5px;
  border-radius: 0;
  overflow: hidden;
  background-color: transparent;
  background-image: linear-gradient(to right,gray, gray);
  background-repeat: no-repeat;
  background-size: 0 100%;
  opacity: 1;
  z-index: 1;
  transition: background-size 0.4s ease-in-out;
}
.progress::after {
  content: "";
  width: 100%;
  height: 5px;
  background: transparent;
  position: absolute;
  left: 0;
  top: 1px;
  opacity: 0.5;
}

</style>
